# Nginx konfiguratsiyasi - crm24.soundz.uz uchun
# Bu faylni /etc/nginx/sites-available/crm24.soundz.uz ga ko'chiring

server {
    listen 80;
    server_name crm24.soundz.uz;
    
    # HTTP dan HTTPS ga redirect
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name crm24.soundz.uz;

    # SSL sertifikatlari (Let's Encrypt yoki boshqa)
    ssl_certificate /etc/letsencrypt/live/crm24.soundz.uz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/crm24.soundz.uz/privkey.pem;

    # SSL sozlamalari
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Frontend (React SPA)
    location / {
        root /var/www/call-center/frontend/dist;
        index index.html;
        try_files $uri $uri/ /index.html;
        
        # Cache control
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Backend API
    location /api/ {
        proxy_pass http://localhost:4000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # CORS headers (agar kerak bo'lsa)
        add_header Access-Control-Allow-Origin https://crm24.soundz.uz always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type" always;
        add_header Access-Control-Allow-Credentials true always;
        
        if ($request_method = OPTIONS) {
            return 204;
        }
    }

    # WebSocket support (agar kerak bo'lsa)
    location /socket.io/ {
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Static files cache
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        root /var/www/call-center/frontend/dist;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Favicon
    location = /favicon.ico {
        root /var/www/call-center/frontend/dist;
        access_log off;
        log_not_found off;
    }

    # Logs
    access_log /var/log/nginx/crm24.soundz.uz.access.log;
    error_log /var/log/nginx/crm24.soundz.uz.error.log;
}

